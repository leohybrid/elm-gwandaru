title: "ELM GWANDARU"
description: "Poems x writings and Artwork by Elm Gwandaru"
baseurl: ""                  # leave blank for root
url: "https://leohybrid.github.io/elm-gwandaru"

# Use remote_theme (this reads _data/navigation.yml)
remote_theme: cotes2020/jekyll-theme-chirpy

timezone: Africa/Nairobi
lang: en

# Home pagination
paginate: 10
paginate_path: "/page:num/"
permalink: pretty

# Plugins (must match Gemfile)
plugins:
  - jekyll-remote-theme
  - jekyll-seo-tag
  - jekyll-paginate
  - jekyll-include-cache

# Exclude noisy files
exclude:
  - Gemfile
  - Gemfile.lock
  - node_modules
  - vendor
